# Set the AWS region
export AWS_DEFAULT_REGION="us-east-1"  # Change this to your desired region

set -vx
#set -ve  used for debug mood

#aws Ec2
aws ec2 describe-instances

echo "aws ec2 describe-instance"
#aws S3
aws s3 ls
echo "aws s3 list"

#aws DynamoBD
aws dynamodb  list-tables
echo "aws DynamoDB Tables"
#aws RDS
aws rds  describe-db-instances
echo "aws RDS"
#aws EFS
aws efs   describe-mount-targets
echo "aws EFS"

#aws Lambda
aws lambda  list-functions
echo "aws lambda"

